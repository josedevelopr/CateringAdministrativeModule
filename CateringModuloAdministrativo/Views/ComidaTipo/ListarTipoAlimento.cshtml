@model IEnumerable<Dominio.Core.Entities.Tipo_Alimento>

@{
    ViewBag.Title = "ListarTipoAlimento";
    Layout = "~/Views/Shared/_principalSharedView.cshtml";
}


<h2>@ViewBag.Title</h2>


<div class="table-data__tool">
    <div class="table-data__tool-left">
        <div class="rs-select2--light rs-select2--md">
            <select class="js-select2" name="property">
                <option selected="selected">Tipo de Alimento</option>
                <option value="">Alimento 1</option>
                <option value="">Alimento 1</option>
            </select>
            <div class="dropDownSelect2"></div>
        </div>
        <div class="rs-select2--light rs-select2--sm">
            <select class="js-select2" name="time">
                <option selected="selected">Estado</option>
                <option value="">Activos</option>
                <option value="">Inactivo</option>
            </select>
            <div class="dropDownSelect2"></div>
        </div>
        <button class="au-btn-filter">
            <i class="zmdi zmdi-filter-list"></i>filtros
        </button>



    </div>
    <div class="table-data__tool-right">
        <a class="au-btn au-btn-icon au-btn--green au-btn--small" href="@Url.Action("AgregarTipoAlimento","ComidaTipo", new { /* id=item.PrimaryKey */ })">
            <i class="zmdi zmdi-plus"></i>añadir elemento
        </a>
        <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
            <select class="js-select2" name="type">
                <option selected="selected">Exportar</option>
                <option value="">Pdf</option>
                <option value="">Excel</option>
            </select>
            <div class="dropDownSelect2"></div>
        </div>
    </div>
</div>


<table class="table table-data2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ta_int_idtipoalim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ta_vchar_descr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ta_int_est)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ta_int_idtipoalim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ta_vchar_descr)
            </td>
            <td>
                @{ var estado = @Html.DisplayFor(modelItem => item.ta_int_est);}
                @if (Equals(estado.ToString(), "1"))
                {
                    <span class="status--process">Activo</span>
                }
                else
                {
                    <span class="status--denied">Inactivo</span>
                }
            </td>
            <td>
                <div class="table-data-feature">
                    <a class="item" data-toggle="tooltip" data-placement="top" title="Editar" href="@Url.Action("EditarTipoAlimento","TipoAlimento", new {  idInsumo=item.ta_int_idtipoalim })">
                        <i class="zmdi zmdi-edit"></i>
                    </a>
                    <a class="item" data-toggle="tooltip" data-placement="top" title="Detalles" href="@Url.Action("verTipoAlimento","TipoAlimento", new { idInsumo=item.ta_int_idtipoalim })">
                        <i class="zmdi zmdi-more"></i>
                    </a>
                </div>
            </td>
        </tr>

        <tr class="spacer"></tr>
    }

    </tbody>
</table>
