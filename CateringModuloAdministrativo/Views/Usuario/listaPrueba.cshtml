@model IEnumerable<Dominio.Core.Entities.Usuario>

@{
    Layout = null;
}

<!DOCTYPE html>
<link href="https://bootswatch.com/4/lux/bootstrap.min.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />   
</head>
<body>
    <p>
        Lista de usuarios
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.us_int_idusu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.us_int_nomtipousu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.us_vchar_correo)
            </th>      
            <th>
                @Html.DisplayNameFor(model => model.us_vchar_nomusu)
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.us_int_idusu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.us_int_nomtipousu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.us_vchar_correo)
            </td>        
            <td>
                @Html.DisplayFor(modelItem => item.us_vchar_nomusu)
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
