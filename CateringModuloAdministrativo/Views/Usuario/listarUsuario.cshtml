@model IEnumerable<Dominio.Core.Entities.Usuario>

@{
    ViewBag.Title = "Listar usurios";
    Layout = "~/Views/Shared/_principalSharedView.cshtml";
}

<h2>@ViewBag.Title</h2>


<div class="table-data__tool">
    <div class="table-data__tool-left">
        <div class="rs-select2--light rs-select2--md d-none">
            <select class="js-select2" name="property">
                <option selected="selected">Tipo de insumos</option>
                <option value="">Insumos 1</option>
                <option value="">Insumos 1</option>
            </select>
            <div class="dropDownSelect2"></div>
        </div>
        <div class="rs-select2--light rs-select2--sm d-none">
            <select class="js-select2" name="time">
                <option selected="selected">Estado</option>
                <option value="">Activos</option>
                <option value="">Inactivo</option>
            </select>
            <div class="dropDownSelect2"></div>
        </div>
        <button class="au-btn-filter d-none">
            <i class="zmdi zmdi-filter-list"></i>filtros
        </button>
    </div>
    <div class="table-data__tool-right">
        <a class="au-btn au-btn-icon au-btn--green au-btn--small" href="@Url.Action("Create", "Usuario", new { /* id=item.PrimaryKey */ })">
            <i class="zmdi zmdi-plus"></i>añadir elemento
        </a>
        <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
            <select class="js-select2" name="type">
                <option selected="selected">Exportar</option>
                <option value="">Pdf</option>
                <option value="">Excel</option>
            </select>
            <div class="dropDownSelect2"></div>
        </div>
    </div>
</div>

<table class="table table-data2 table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.us_int_idusu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.us_int_nomtipousu)
            </th>
            <th>
                Foto de perfil
            </th>
            <th>
                @Html.DisplayNameFor(model => model.us_vchar_correo)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.us_vchar_nomusu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.us_int_idusu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.us_int_nomtipousu)
                </td>
                <td>
                    @{
                        if (item.us_vchar_foto == "ND")
                        {
                            <img class="rounded-circle" src="~/images/icon/user-icon.png" style="width:40px;height:40px;" />
                        }
                        else
                        {
                            <img class="rounded-circle" src="@item.us_vchar_foto" style="width:40px;height:40px;" />
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.us_vchar_correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.us_vchar_nomusu)
                </td>
                <td>
                    <div class="table-data-feature">
                        <a class="item" data-toggle="tooltip" data-placement="top" title="Editar" href="@Url.Action("Edit","Usuario", new {  idUsuario=item.us_int_idusu })">
                            <i class="zmdi zmdi-edit"></i>
                        </a>
                        <a class="item" data-toggle="tooltip" data-placement="top" title="Detalles" href="@Url.Action("Details","Usuario", new { idUsuario=item.us_int_idusu })">
                            <i class="zmdi zmdi-more"></i>
                        </a>
                    </div>
                </td>
            </tr>
            <tr class="spacer"></tr>
        }
    </tbody>
</table>
